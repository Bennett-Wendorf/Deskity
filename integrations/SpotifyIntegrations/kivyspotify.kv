# #:kivy !
<SpotifyWidget>:
    AsyncImage:
        id: album_art
        source: 'res/icons/Spotify_Icon_RGB_Green.png'
        size: self.width, self.height
        size_hint: 0.5, 0.5
        pos_hint: {'center_x': 0.25, 'center_y': 0.6}
    Image:
        id: spotify_logo
        source: 'res/icons/Spotify_Icon_RGB_White.png'
        size: self.width, self.height
        size_hint: 0.15, 0.15
        pos_hint: {'x': 0.85, 'y': 0.85}
    Label:
        id: song_title
        text: root.current_title
        text_size: self.width, None
        font_size: self.height * 0.5
        size_hint: 0.5, 0.2
        halign: 'center'
        valign: 'center'
        pos_hint: {'center_x': 0.75, 'center_y': 0.73}
        shorten: True
        shorten_from: 'right'
    Label:
        id: album 
        text: root.current_album
        text_size: self.width, None
        font_size: self.height * 0.5
        size_hint: 0.5, 0.13
        halign: 'center'
        valign: 'center'
        pos_hint: {'center_x': 0.75, 'center_y': 0.57}
        shorten: True
        shorten_from: 'right'
    Label:
        id: artist
        text: root.current_artist
        text_size: self.width, None
        font_size: self.height * 0.5
        size_hint: 0.5, 0.13
        halign: 'center'
        valign: 'center'
        pos_hint: {'center_x': 0.75, 'center_y': 0.43}
        shorten: True
        shorten_from: 'right'
    MDIconButton:
        icon: 'pause' if root.playing else 'play'
        pos_hint: {'center_x': 0.75, 'center_y': 0.25}
        on_release: root.Toggle_Playback()
        user_font_size: 10
    ProgressBar:
        id: playback_progress
        pos_hint: {'center_x': 0.5, 'center_y': 0.1}
        size_hint_x: 0.95
        max: root.track_duration
        value: root.curr_playback_time