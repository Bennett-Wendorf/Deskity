<Screen_Manager>:
    MainScreen:
        id: main_screen
        name: 'main_screen'
        BoxLayout:
            orientation: "horizontal"
            padding: 3
            spacing: 5
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    orientation: "horizontal"
                    CheckBox:

                Button:
                    text: "App Location Placeholder"
            ToDoWidget:
                id: to_do_widget
                name: 'to_do_widget'
                orientation: 'vertical'
                grid_layout: tasks_list
                ScrollView:
                    size: self.size
                    GridLayout:
                        id: tasks_list
                        cols: 1
                        row_default_height: 30
                        row_force_default: True
                        size_hint_y: None
                        spacing: 0, 10
                        padding: 4
    SettingsScreen:
        id: settings_screen
        name: 'settings_screen'
        RelativeLayout:
            Button:
                id: back_button
                text: 'Back'
                on_press: root.switchToMain()
                pos_hint: {'center_x': 0.085, 'center_y': 0.085}
                size_hint: (.15,.15)
            Label:
                id: microsoft_sign_in_label
                text: root.ids.to_do_widget.sign_in_label_text
                pos_hint: {'center_x': .5, 'center_y': .6}
            Button:
                id: microsoft_sign_in
                text: "Sign In"
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: (.2,.1)
                on_press: root.ids.to_do_widget.get_access_code_threaded()

<TaskItem>:
    name: "Task Item"
    CheckBox:
        pos_hint: {'center_x': 0.05, 'center_y': 0.5}
        size_hint: (.1,.9)
    Label:
        pos_hint: {'center_x': 0.57, 'center_y': 0.5}
        size_hint: (.86,.9)
        text: root.task_name
        size_hint_y: None
        text_size: self.width, None
        height: self.texture_size[1]
        canvas.before:
            Color:
                rgba: 0,.1,.3,1
            Rectangle:
                pos: self.pos
                size: self.size
