<Screen_Manager>:
    MainScreen:
        id: main_screen
        name: 'main_screen'
        BoxLayout:
            orientation: "horizontal"
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    orientation: "horizontal"
                    CheckBox:

                Button:
                    text: "App Location Placeholder"
            ToDoWidget:
                id: to_do_widget
                name: 'to_do_widget'
                orientation: 'vertical'
                Label:
                    text: "To Do Placeholder"
    SettingsScreen:
        id: settings_screen
        name: 'settings_screen'
        RelativeLayout:
            Button:
                id: back_button
                text: 'Back'
                on_press: root.switchToMain()
                pos_hint: {'center_x': 0.085, 'center_y': 0.085}
                size_hint: (.15,.15)
            Label:
                text: "Sign in to Microsoft"
                pos_hint: {'center_x': .5, 'center_y': .6}
            Button:
                id: microsoft_sign_in
                text: "Sign In"
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: (.2,.1)
                on_press: root.ids.to_do_widget.get_access_code()
