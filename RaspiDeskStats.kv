<Screen_Manager>:
    MainScreen:
        id: main_screen
        name: 'main_screen'
        BoxLayout:
            orientation: "horizontal"
            padding: 3
            spacing: 5
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    orientation: "horizontal"
                    CheckBox:

                Button:
                    text: "App Location Placeholder"
            ToDoWidget:
                id: to_do_widget
                name: 'to_do_widget'
                orientation: 'vertical'
                grid_layout: tasks_list
                GridLayout:
                    id: tasks_list
                    cols: 1
                    row_default_height: 30
                    row_force_default: True
    SettingsScreen:
        id: settings_screen
        name: 'settings_screen'
        RelativeLayout:
            Button:
                id: back_button
                text: 'Back'
                on_press: root.switchToMain()
                pos_hint: {'center_x': 0.085, 'center_y': 0.085}
                size_hint: (.15,.15)
            Label:
                id: microsoft_sign_in_label
                text: root.ids.to_do_widget.sign_in_label_text
                pos_hint: {'center_x': .5, 'center_y': .6}
            Button:
                id: microsoft_sign_in
                text: "Sign In"
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: (.2,.1)
                on_press: root.ids.to_do_widget.get_access_code()

<TaskItem>:
    CheckBox:
        pos_hint: {'center_x': 0.05, 'center_y': 0.5}
        size_hint: (.1,.9)
    Label:
        pos_hint: {'center_x': 0.55, 'center_y': 0.5}
        size_hint: (.9,.9)
        text: "test"
        canvas.before:
            Color:
                rgba: 0,.1,.3,1
            Rectangle:
                pos: self.pos
                size: self.size
